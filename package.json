{
  "private": true,
  "name": "network-share",
  "license": "MIT",
  "packageManager": "yarn@3.2.1",
  "description": "Share files and text within the same network.",
  "workspaces": [
    "apps/**",
    "packages/**"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,css,json}\" --ignore-path .gitignore",
    "lint": "eslint . --ext .ts,.js,.tsx,.jsx",
    "dev": "yarn turbo run dev --parallel",
    "build": "yarn turbo run build"
  },
  "devDependencies": {
    "@casper124578/eslint-config": "^4.4.0",
    "@casper124578/eslint-config-next": "^4.4.0",
    "@casper124578/eslint-config-react": "^4.4.0",
    "eslint": "^8.17.0",
    "prettier": "^2.7.0",
    "turbo": "^1.2.16",
    "typescript": "^4.7.3"
  }
}
